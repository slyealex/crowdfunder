<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <ul>
    <li><%= link_to 'All Projects', projects_path %></li>
    <li><%= link_to 'New Project', new_project_path %></li>
    <li><%= link_to 'All Users', users_path %></li>
    <li><%= link_to 'New User', new_user_path %></li>

    <li><% if current_user %>

        <%= link_to 'My Account', user_path(current_user)  %>
        <% end %>
    </li>


    <li>
      <p class="userinfo">
        <% if current_user %>
          Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
        <% else %>
          <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
        <% end %>
      </p>
    </li>




  </ul>

  <%= yield %>


</body>
</html>
