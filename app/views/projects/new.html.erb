

<h1>New Project</h1>

<%= form_for @project do |f| %>
   <div class="field">
     <%= f.label :name %>
     <%= f.text_field :name %>
   </div>

   <div class="field">
     <%= f.label :description %>
     <%= f.text_area :description %>
   </div>

   <div class="field">
     <%= f.label :goal %>
     <%= f.number_field :goal %>
   </div>

   <div class="field">
     <%= f.label :end_date %>
     <%= f.date_field :end_date %>
   </div>

   <div class="field">
     <%= f.label :category %>
     <%= f.select :category, ['Arts', 'Comincs', 'Crafts', 'Dance', 'Design', 'Fashion', 'Film & Video', 'Food', 'Games', 'Journalism', 'Music', 'Photography', 'Publishing', 'Technology', 'Theater'], include_blank: true %>

   </div>

   <h2>Rewards</h2>

   <div id="rewards">
     <%= f.fields_for :rewards do |reward_fields| %>
       <%= render 'reward_fields', f: reward_fields %>
     <% end %>

     <div class="links">
       <%= link_to_add_association "Add Reward", f, :rewards %>
     </div>
   </div>

   <div class="field">
     <%= f.submit %>
   </div>



<% end %>
