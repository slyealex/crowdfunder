
<div>
  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>
  <p><%= @project.end_date %></p>
  <h1>GOAL: $<%= @project.goal %></h1><br>

  <h2 id="total-amount">Amount raised: $<%= @project.total_amount %></h2>
</div><br>


<div class="reward">
  <%= render 'reward', locals: {pledge: @pledge} %>
</div>

<div id="comment-list">
  <h3>Comments</h3>
  <%= render partial: "comments" %>
</div>

<div>
  <% if current_user %>
    <h4>Comment on this Project</h4>

    <%= form_for [@project, @comment], :remote => true do |f| %>

      <div class="field">
        <%= f.label :comment %><br/>
        <%= f.text_area :comment %>
      </div>

      <div class="actions">
        <%= f.submit 'Submit Comment' %>
      </div>

    <% end %>
  <% end %>
</div>
