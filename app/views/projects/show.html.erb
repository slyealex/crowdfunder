
<div>
  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>
  <p><%= @project.end_date %></p>




  <h1>GOAL: $<%= @project.goal %></h1><br>


</div>
  <h2 id="total-amount">Amount raised: $<%= @project.total_amount %></h2>
</div><br>




<div id="clockdiv">
  <div>
    <span class="days"></span>
    <div class="smalltext">Days</div>
  </div>
  <div>
    <span class="hours"></span>
    <div class="smalltext">Hours</div>
  </div>
  <div>
    <span class="minutes"></span>
    <div class="smalltext">Minutes</div>
  </div>
  <div>
    <span class="seconds"></span>
    <div class="smalltext">Seconds</div>
  </div>
</div>

<div class="reward">
  <%= render 'reward', locals: {pledge: @pledge} %>
</div>

<div id="comment-list">
  <h3>Comments</h3>
  <%= render partial: "comments" %>
</div>


<!-- <%= link_to 'Edit', edit_project_path(@project) %> | -->
<!-- <%= link_to 'Back to all Projects', projects_path %> -->

<div>

  <% if current_user %>
    <h4>Comment on this Project</h4>

    <%= form_for [@project, @comment], :remote => true do |f| %>

      <div class="field">
        <%= f.label :comment %><br/>
        <%= f.text_area :comment %>
      </div>

      <div class="actions">
        <%= f.submit 'Submit Comment' %>
      </div>

    <% end %>
  <% end %>

  <p>Project Created by You:</p>
    <!-- if current user.backed_project = true display yes -->
    <% if current_user && (current_user.id == @project.user_id) %>
      <p>Yes</p>
    <% else %>
      <p>No </p>
    <% end %>
</div>

<div>
  <p>Project Backed by You:</p>
    <!-- if current user.backed_project = true display yes -->
    <% if current_user && (current_user.backed_projects.include?(@project)) %>


      <p>Yes</p>
    <% else %>
      <p>No </p>
    <% end %>
</div>
